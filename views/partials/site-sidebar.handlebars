<div class="widget">
  <h3 class="mb-3">Kategoriler</h3>
  <div class="widget-category">
    {{#if categories}}
      <div class="list-group">
        <a
          href="/blog"
          class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
        >
          T端m Postlar
          <span class="badge badge-secondary badge-pill">T端m端</span>
        </a>
        {{#each categories}}
          <a
            href="/category/{{this.slug}}"
            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
          >
            <span>
              <i class="fas fa-tag" style="color: {{this.color}}"></i>
              {{this.name}}
            </span>
            {{#if this.postCount}}
              <span
                class="badge badge-primary badge-pill"
                style="background-color: {{this.color}}"
              >
                {{this.postCount}}
              </span>
            {{/if}}
          </a>
        {{/each}}
      </div>
    {{else}}
      <p class="text-muted">Hen端z kategori bulunmuyor.</p>
    {{/if}}
  </div>
</div>