<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">İLETİŞİM</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
  <div class="container">

    <div class="row text-center mb-5">
      <div class="col-md-8 offset-md-2">
        <div class="section-header">
          <h2 class="title">Bizimle İletişime Geçin</h2>
          <p class="text-muted">Sorularınız, önerileriniz veya geri
            bildirimleriniz için bize ulaşabilirsiniz.</p>
        </div>
      </div>
    </div>

    <div class="row">
      <!-- İletişim Formu -->
      <div class="col-lg-8 mb-4">
        <div class="card shadow">
          <div class="card-body p-4">
            <h4 class="mb-4"><i class="fas fa-envelope"></i> İletişim Formu</h4>

            {{#if sessionFlash.message}}
              <div
                class="{{sessionFlash.type}} alert-dismissible fade show"
                role="alert"
              >
                {{sessionFlash.message}}
                <button type="button" class="close" data-dismiss="alert">
                  <span>&times;</span>
                </button>
              </div>
            {{/if}}

            <form action="/contact" method="POST" id="contactForm">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="name"><i class="fas fa-user"></i>
                      Adınız Soyadınız *</label>
                    <input
                      class="form-control"
                      id="name"
                      name="name"
                      type="text"
                      placeholder="Adınız ve soyadınızı girin"
                      required
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="email"><i class="fas fa-envelope"></i>
                      E-posta Adresiniz *</label>
                    <input
                      class="form-control"
                      id="email"
                      name="email"
                      type="email"
                      placeholder="ornek@email.com"
                      required
                    />
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="subject"><i class="fas fa-tag"></i> Konu *</label>
                <input
                  class="form-control"
                  id="subject"
                  name="subject"
                  type="text"
                  placeholder="Mesajınızın konusu"
                  required
                />
              </div>

              <div class="form-group">
                <label for="message"><i class="fas fa-comment"></i>
                  Mesajınız *</label>
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  placeholder="Mesajınızı buraya yazın..."
                  rows="6"
                  required
                ></textarea>
              </div>

              <div class="text-center">
                <button
                  class="btn btn-primary btn-lg"
                  type="submit"
                  id="submitBtn"
                >
                  <i class="fas fa-paper-plane"></i>
                  Mesaj Gönder
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- İletişim Bilgileri -->
      <div class="col-lg-4 mb-4">
        <div class="card shadow mb-4">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-map-marker-alt"></i>
              Adres</h5>
            <p class="text-muted">İstanbul, Türkiye</p>
          </div>
        </div>

        <div class="card shadow mb-4">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-envelope"></i> E-posta</h5>
            <p class="text-muted">info@nodeblog.com</p>
          </div>
        </div>

        <div class="card shadow mb-4">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-phone"></i> Telefon</h5>
            <p class="text-muted">+90 (555) 123 45 67</p>
          </div>
        </div>

        <div class="card shadow">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-clock"></i>
              Çalışma Saatleri</h5>
            <p class="text-muted mb-1">Pazartesi - Cuma: 09:00 - 18:00</p>
            <p class="text-muted mb-0">Cumartesi - Pazar: Kapalı</p>
          </div>
        </div>

        <div class="card shadow mt-4">
          <div class="card-body text-center">
            <h5 class="card-title">Sosyal Medya</h5>
            <div class="social-links">
              <a href="#" class="btn btn-outline-primary btn-sm m-1"><i
                  class="fab fa-facebook-f"
                ></i></a>
              <a href="#" class="btn btn-outline-info btn-sm m-1"><i
                  class="fab fa-twitter"
                ></i></a>
              <a href="#" class="btn btn-outline-danger btn-sm m-1"><i
                  class="fab fa-instagram"
                ></i></a>
              <a href="#" class="btn btn-outline-primary btn-sm m-1"><i
                  class="fab fa-linkedin-in"
                ></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
  // Form gönderilirken butonu disable et
  document.getElementById('contactForm').addEventListener('submit', function() {
  const btn = document.getElementById('submitBtn'); btn.disabled = true;
  btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Gönderiliyor...'; });
</script>