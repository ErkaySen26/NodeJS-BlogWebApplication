<!-- ============================
     INSIDE HERO SECTION Section
     ============================ -->
<section class="page-image page-image-about md-padding">
  <h1 class="text-white text-center">POST YÖNETİMİ</h1>
</section>

<!-- ============================
     POSTS MANAGEMENT Section
     ============================ -->
<section id="posts-management" class="md-padding">
  <div class="container">
    {{>admin-nav}}
    
    <!-- Arama ve Filtreleme -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5><i class="fas fa-search"></i> Arama ve Filtreleme</h5>
          </div>
          <div class="card-body">
            <form method="GET" action="/admin/posts">
              <div class="row">
                <div class="col-md-4">
                  <input type="text" class="form-control" name="search" 
                         placeholder="Post başlığı veya içeriği ara..." 
                         value="{{query.search}}">
                </div>
                <div class="col-md-3">
                  <select class="form-control" name="category">
                    <option value="">Tüm Kategoriler</option>
                    {{#each categories}}
                    <option value="{{this._id}}" {{#if (eq ../query.category this._id)}}selected{{/if}}>
                      {{this.name}}
                    </option>
                    {{/each}}
                  </select>
                </div>
                <div class="col-md-3">
                  <select class="form-control" name="sort">
                    <option value="newest" {{#if (eq query.sort "newest")}}selected{{/if}}>En Yeni</option>
                    <option value="oldest" {{#if (eq query.sort "oldest")}}selected{{/if}}>En Eski</option>
                    <option value="title" {{#if (eq query.sort "title")}}selected{{/if}}>Başlık A-Z</option>
                    <option value="views" {{#if (eq query.sort "views")}}selected{{/if}}>En Çok Görüntülenen</option>
                  </select>
                </div>
                <div class="col-md-2">
                  <button type="submit" class="btn btn-primary btn-block">
                    <i class="fas fa-search"></i> Ara
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Posts Tablosu -->
    <div class="row mt-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h5><i class="fas fa-list"></i> Postlar</h5>
            <a href="/posts/new" class="btn btn-success">
              <i class="fas fa-plus"></i> Yeni Post Ekle
            </a>
          </div>
          <div class="card-body">
            {{#if posts}}
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Resim</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Yazar</th>
                    <th>Durum</th>
                    <th>Görüntülenme</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each posts}}
                  <tr>
                    <td>
                      <img src="{{this.post_image}}" alt="{{this.title}}" 
                           style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                    </td>
                    <td>
                      <strong>{{truncateText this.title 40}}</strong>
                      <br>
                      <small class="text-muted">{{truncateText this.summary 60}}</small>
                    </td>
                    <td>
                      <span class="badge badge-primary" style="background-color: {{this.category.color}}">
                        {{this.category.name}}
                      </span>
                    </td>
                    <td>{{this.author.username}}</td>
                    <td>
                      {{#if (eq this.status "published")}}
                        <span class="badge badge-success">Yayınlandı</span>
                      {{else}}
                        <span class="badge badge-warning">Taslak</span>
                      {{/if}}
                    </td>
                    <td>
                      <i class="fas fa-eye"></i> {{this.views}}
                    </td>
                    <td>{{generateDate this.createdAt "DD/MM/YYYY"}}</td>
                    <td>
                      <div class="btn-group" role="group">
                        <a href="/posts/{{this._id}}" class="btn btn-sm btn-info" target="_blank">
                          <i class="fas fa-eye"></i>
                        </a>
                        <a href="/admin/posts/edit/{{this._id}}" class="btn btn-sm btn-warning">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form action="/admin/posts/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                          <button type="submit" class="btn btn-sm btn-danger"
                                  onclick="return confirm('Bu postu silmek istediğinizden emin misiniz?')">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>

            <!-- Sayfalama -->
            {{#if pagination.totalPages}}
            <nav aria-label="Post pagination">
              <ul class="pagination justify-content-center">
                {{#if pagination.hasPrevPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{pagination.prevPage}}&search={{query.search}}&category={{query.category}}&sort={{query.sort}}">
                    Önceki
                  </a>
                </li>
                {{/if}}
                
                {{#each pagination.pages}}
                <li class="page-item {{#if this.isCurrent}}active{{/if}}">
                  <a class="page-link" href="?page={{this.number}}&search={{../query.search}}&category={{../query.category}}&sort={{../query.sort}}">
                    {{this.number}}
                  </a>
                </li>
                {{/each}}
                
                {{#if pagination.hasNextPage}}
                <li class="page-item">
                  <a class="page-link" href="?page={{pagination.nextPage}}&search={{query.search}}&category={{query.category}}&sort={{query.sort}}">
                    Sonraki
                  </a>
                </li>
                {{/if}}
              </ul>
            </nav>
            
            <div class="text-center text-muted">
              {{pagination.startItem}}-{{pagination.endItem}} / {{pagination.totalItems}} post gösteriliyor
            </div>
            {{/if}}
            
            {{else}}
            <div class="text-center py-5">
              <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">Henüz post bulunmuyor</h5>
              <a href="/posts/new" class="btn btn-primary mt-3">
                <i class="fas fa-plus"></i> İlk Postunu Oluştur
              </a>
            </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
