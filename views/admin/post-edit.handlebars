<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Post Düzenle</h3>
          <div class="card-tools">
            <a href="/admin/posts" class="btn btn-sm btn-secondary">
              <i class="fas fa-arrow-left"></i> Geri
            </a>
          </div>
        </div>
        <div class="card-body">
          {{#if sessionFlash.message}}
            <div class="{{sessionFlash.type}}">
              {{sessionFlash.message}}
            </div>
          {{/if}}

          <form action="/admin/posts/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <label for="title">Başlık *</label>
                  <input type="text" class="form-control" id="title" name="title" 
                         value="{{post.title}}" required>
                </div>

                <div class="form-group">
                  <label for="summary">Özet</label>
                  <textarea class="form-control" id="summary" name="summary" 
                            rows="2" placeholder="Post özeti (opsiyonel)">{{post.summary}}</textarea>
                  <small class="form-text text-muted">Boş bırakılırsa otomatik oluşturulur</small>
                </div>

                <div class="form-group">
                  <label for="content">İçerik *</label>
                  <textarea class="form-control" id="content" name="content" 
                            rows="15" required>{{post.content}}</textarea>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="status">Durum *</label>
                  <select class="form-control" id="status" name="status" required>
                    <option value="published" {{#if (eq post.status "published")}}selected{{/if}}>
                      Yayınlandı
                    </option>
                    <option value="draft" {{#if (eq post.status "draft")}}selected{{/if}}>
                      Taslak
                    </option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="category">Kategori *</label>
                  <select class="form-control" id="category" name="category" required>
                    <option value="">Kategori Seçin</option>
                    {{#each categories}}
                    <option value="{{this._id}}" {{#if (eq this._id ../post.category._id)}}selected{{/if}}>
                      {{this.name}}
                    </option>
                    {{/each}}
                  </select>
                </div>

                <div class="form-group">
                  <label>Mevcut Görsel</label>
                  <div class="mb-2">
                    <img src="{{post.post_image}}" alt="{{post.title}}" 
                         class="img-fluid" style="max-height: 200px; object-fit: cover;">
                  </div>
                </div>

                <div class="form-group">
                  <label for="post_image">Yeni Görsel</label>
                  <input type="file" class="form-control-file" id="post_image" name="post_image" accept="image/*">
                  <small class="form-text text-muted">Yeni görsel yüklemek için seçin</small>
                </div>

                <div class="form-group">
                  <label>İstatistikler</label>
                  <ul class="list-unstyled">
                    <li><i class="fas fa-eye"></i> {{post.views}} görüntülenme</li>
                    <li><i class="fas fa-clock"></i> {{generateDate post.createdAt "DD/MM/YYYY HH:mm"}}</li>
                    <li><i class="fas fa-user"></i> {{post.author.username}}</li>
                  </ul>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-12">
                <hr>
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-save"></i> Kaydet
                </button>
                <a href="/admin/posts" class="btn btn-secondary">
                  <i class="fas fa-times"></i> İptal
                </a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

